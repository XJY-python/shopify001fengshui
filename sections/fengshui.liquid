  };
  
  document.addEventListener('DOMContentLoaded', function() {
    // 页面加载时默认显示金属产品
    showProducts('metal');
    
    // 为元素盒子添加事件监听
    document.querySelectorAll('.element-box').forEach(box => {
      box.addEventListener('mouseenter', function() {
        const element = this.dataset.element;
        showElementDescription(element);
        showProducts(element);
      });
      
      // 为移动设备添加点击事件
      box.addEventListener('click', function() {
        const element = this.dataset.element;
        showElementDescription(element);
        showProducts(element);
        
        // 在移动设备上滚动到产品面板
        if (window.innerWidth <= 768) {
          const productsPanel = document.querySelector('.products-panel');
          if (productsPanel) {
            productsPanel.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        }
      });
    });

    // 显示元素描述
    function showElementDescription(element) {
      // 隐藏所有现有描述
      document.querySelectorAll('.element-description').forEach(desc => {
        desc.classList.add('hidden');
      });

      // 为元素创建或显示描述
      let descriptionBox = document.querySelector(`.element-box[data-element="${element}"] .element-description`);
      
      if (!descriptionBox) {
        descriptionBox = document.createElement('div');
        descriptionBox.className = 'element-description mt-3 p-3 bg-gray-50 rounded-lg text-sm text-gray-600 hidden animate-fadeIn';
        
        // 根据元素添加描述内容
        let descriptionContent = '';
        switch(element) {
          case 'metal':
            descriptionContent = '金元素代表财富、坚固、精确和纪律。在五行理论中，金象征着收获、结构和组织。';
            break;
          case 'wood':
            descriptionContent = '木元素象征生长、创造、活力和扩张。在五行中，木代表着新的开始和成长。';
            break;
          case 'water':
            descriptionContent = '水元素代表流动、智慧、适应和净化。在五行中，水象征着深度思考和内在智慧。';
            break;
          case 'fire':
            descriptionContent = '火元素象征热情、能量、变革和光明。在五行中，火代表着激情和转化。';
            break;
          case 'earth':
            descriptionContent = '土元素代表稳定、滋养、基础和实用。在五行中，土象征着安全和可靠性。';
            break;
        }
        
        descriptionBox.textContent = descriptionContent;
        document.querySelector(`.element-box[data-element="${element}"]`).appendChild(descriptionBox);
      }
      
      // 显示描述并添加动画
      descriptionBox.classList.remove('hidden');
      setTimeout(() => {
        descriptionBox.style.opacity = '1';
      }, 10);
    }

    // 显示产品
    function showProducts(element) {
      // 隐藏所有产品面板和默认消息
      document.querySelectorAll('.product-panel').forEach(panel => {
        panel.classList.add('hidden');
        panel.classList.remove('opacity-100');
        panel.classList.add('opacity-0');
      });
      document.getElementById('default-message').classList.add('hidden');

      // 显示选中的产品面板
      const productPanel = document.getElementById(`${element}-products`);
      if (productPanel) {
        // 显示加载状态
        const loadingIndicator = document.getElementById(`${element}-loading`);
        const productContainer = document.getElementById(`${element}-products-container`);
        
        if (loadingIndicator && productContainer) {
          // 保存当前显示状态
          const wasFiltered = productContainer.querySelectorAll('.product-card[style*="display: none"]').length > 0;
          
          // 仅在首次加载或未筛选时显示加载状态
          if (!wasFiltered) {
            productContainer.style.opacity = '0.5';
            loadingIndicator.classList.remove('hidden');
          }
        }
        
        // 显示产品面板
        productPanel.classList.remove('hidden');
        
        // 触发动画
        setTimeout(() => {
          productPanel.classList.remove('opacity-0');
          productPanel.classList.add('opacity-100');
          
          // 隐藏加载状态
          if (loadingIndicator) {
            setTimeout(() => {
              loadingIndicator.classList.add('hidden');
              if (productContainer) productContainer.style.opacity = '1';
            }, 300);
          }
          
          // 重置产品卡片动画
          resetProductAnimations(element);
        }, 10);
      }
    }

    // 重置产品卡片动画
    function resetProductAnimations(element) {
      const productCards = document.querySelectorAll(`#${element}-products .product-card`);
      productCards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
          card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, 50 + (index * 100));
      });
    }

    // 为下拉菜单添加排序事件监听
    document.querySelectorAll('.sort-select').forEach(select => {
      select.addEventListener('change', function() {
        const element = this.dataset.element;
        const sortType = this.value;
        sortProducts(element, sortType);
      });
    });

    // 产品排序功能
    function sortProducts(element, sortType) {
      const productContainer = document.getElementById(`${element}-products-container`);
      const productCards = Array.from(productContainer.querySelectorAll('.product-card:not([style*="display: none"])'));
      
      // 显示加载状态
      const loadingIndicator = document.getElementById(`${element}-loading`);
      if (loadingIndicator) {
        loadingIndicator.classList.remove('hidden');
        productContainer.style.opacity = '0.5';
      }
      
      // 短暂延迟模拟加载过程
      setTimeout(() => {
        // 根据选择的排序类型进行排序
        switch(sortType) {
          case 'price-asc':
            // 价格从低到高
            productCards.sort((a, b) => {
              const priceA = parseFloat(a.dataset.price);
              const priceB = parseFloat(b.dataset.price);
              return priceA - priceB;
            });
            break;
          case 'price-desc':
            // 价格从高到低
            productCards.sort((a, b) => {
              const priceA = parseFloat(a.dataset.price);
              const priceB = parseFloat(b.dataset.price);
              return priceB - priceA;
            });
            break;
          case 'newest':
            // 最新上架
            productCards.sort((a, b) => {
              const dateA = new Date(a.dataset.date);
              const dateB = new Date(b.dataset.date);
              return dateB - dateA;
            });
            break;
          default:
            // 默认排序（原始顺序）
            productCards.sort((a, b) => {
              const indexA = Array.from(productContainer.children).indexOf(a);
              const indexB = Array.from(productContainer.children).indexOf(b);
              return indexA - indexB;
            });
        }
        
        // 重新排列产品卡片
        productCards.forEach(card => {
          productContainer.appendChild(card);
        });
        
        // 隐藏加载状态并重置动画
        if (loadingIndicator) {
          loadingIndicator.classList.add('hidden');
          productContainer.style.opacity = '1';
        }
        
        // 重置动画
        resetProductAnimations(element);
      }, 500);
    }

    // 为分类标签添加事件监听
    document.querySelectorAll('.category-tag').forEach(tag => {
      tag.addEventListener('click', function(e) {
        e.stopPropagation(); // 防止事件冒泡
        const element = this.closest('.element-box').dataset.element;
        const category = this.dataset.category;
        filterProducts(element, category);
      });
    });

    // 为产品面板中的分类标签添加事件监听
    document.querySelectorAll('.product-categories span').forEach(span => {
      span.addEventListener('click', function() {
        const element = this.closest('.product-panel').id.replace('-products', '');
        const category = this.textContent;
        
        // 添加选中状态动画
        this.classList.add('scale-105');
        setTimeout(() => {
          this.classList.remove('scale-105');
        }, 200);
        
        filterProducts(element, category);
      });
    });

    // 筛选产品
    function filterProducts(element, category) {
      // 显示加载状态
      const loadingIndicator = document.getElementById(`${element}-loading`);
      const productContainer = document.getElementById(`${element}-products-container`);
      
      if (loadingIndicator && productContainer) {
        loadingIndicator.classList.remove('hidden');
        productContainer.style.opacity = '0.5';
      }
      
      // 短暂延迟模拟加载过程
      setTimeout(() => {
        // 先显示所有产品
        showProducts(element);
        
        // 获取当前元素面板中的所有产品卡片
        const productCards = document.querySelectorAll(`#${element}-products .product-card`);
        
        // 使用数据属性筛选并显示匹配的分类
        let hasVisibleProducts = false;
        productCards.forEach(card => {
          const cardCategory = card.getAttribute('data-category');
          if (cardCategory === category) {
            card.style.display = 'block';
            hasVisibleProducts = true;
          } else {
            card.style.display = 'none';
          }
        });
        
        // 如果没有找到该分类的产品，显示消息
        let noProductsMsg = document.querySelector(`#${element}-products-container p.text-gray-500`);
        if (!hasVisibleProducts) {
          if (!noProductsMsg) {
            noProductsMsg = document.createElement('p');
            noProductsMsg.className = 'text-gray-500 col-span-full text-center py-8';
            noProductsMsg.textContent = `暂无${category}类产品`;
            productContainer.appendChild(noProductsMsg);
          }
        } else if (noProductsMsg) {
          noProductsMsg.remove();
        }
        
        // 更新分类标题的显示样式
        const categorySpans = document.querySelectorAll(`#${element}-products .product-categories span`);
        categorySpans.forEach(span => {
          if (span.textContent === category) {
            span.classList.add('bg-opacity-30');
            span.classList.add('font-semibold');
          } else {
            span.classList.remove('bg-opacity-30');
            span.classList.remove('font-semibold');
          }
        });
        
        // 添加重置筛选按钮（如果不存在）
        const productPanel = document.getElementById(`${element}-products`);
        let resetButton = productPanel.querySelector('.reset-filter');
        if (!resetButton) {
          resetButton = document.createElement('button');
          resetButton.className = 'reset-filter px-4 py-2 bg-gray-200 text-gray-700 rounded-full hover:bg-gray-300 transition-colors mt-4';
          resetButton.textContent = '重置筛选';
          productPanel.querySelector('.mb-6').appendChild(resetButton);
          
          resetButton.addEventListener('click', function() {
            resetFilter(element);
          });
        }
        
        // 隐藏加载状态
        if (loadingIndicator) {
          loadingIndicator.classList.add('hidden');
          productContainer.style.opacity = '1';
        }
        
        // 重置动画
        resetProductAnimations(element);
      }, 300);
    }
    
    // 重置筛选
    function resetFilter(element) {
      // 显示加载状态
      const loadingIndicator = document.getElementById(`${element}-loading`);
      const productContainer = document.getElementById(`${element}-products-container`);
      
      if (loadingIndicator && productContainer) {
        loadingIndicator.classList.remove('hidden');
        productContainer.style.opacity = '0.5';
      }
      
      // 短暂延迟模拟加载过程
      setTimeout(() => {
        // 显示所有产品卡片
        const productCards = document.querySelectorAll(`#${element}-products .product-card`);
        productCards.forEach(card => {
          card.style.display = 'block';
        });
        
        // 移除任何"无产品"消息
        const noProductsMsg = document.querySelector(`#${element}-products-container p.text-gray-500`);
        if (noProductsMsg) {
          noProductsMsg.remove();
        }
        
        // 重置分类标签样式
        const categorySpans = document.querySelectorAll(`#${element}-products .product-categories span`);
        categorySpans.forEach(span => {
          span.classList.remove('bg-opacity-30');
          span.classList.remove('font-semibold');
        });
        
        // 重置排序下拉菜单
        const sortSelect = document.querySelector(`.sort-select[data-element="${element}"]`);
        if (sortSelect) {
          sortSelect.value = 'default';
        }
        
        // 移除重置按钮
        const resetButton = document.querySelector(`#${element}-products .reset-filter`);
        if (resetButton) {
          resetButton.remove();
        }
        
        // 隐藏加载状态
        if (loadingIndicator) {
          loadingIndicator.classList.add('hidden');
          productContainer.style.opacity = '1';
        }
        
        // 重置动画
        resetProductAnimations(element);
      }, 300);
    }

    // 为重置按钮添加事件监听
    document.querySelectorAll('.reset-filter').forEach(button => {
      button.addEventListener('click', function() {
        const element = this.closest('.product-panel').id.replace('-products', '');
        resetFilter(element);
      });
    });
    
    // 添加窗口大小变化时的响应式处理
    window.addEventListener('resize', function() {
      // 对于每个元素面板，重置产品卡片样式以适应新的屏幕尺寸
      ['metal', 'wood', 'water', 'fire', 'earth'].forEach(element => {
        const visiblePanel = document.getElementById(`${element}-products`);
        if (visiblePanel && !visiblePanel.classList.contains('hidden')) {
          resetProductAnimations(element);
        }
      });
    });
  });
